  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
    }

    .section {
      margin-bottom: 50px;
    }

    .metadata p {
      font-size: 11pt;
      line-height: 1.8;
      margin: 0;
    }

    .title {
      border: 2px solid red;
      padding: 30px;
      text-align: center;
      margin-top: 30px;
      page-break-after: always;
    }

    .title h1 {
      font-size: 20pt;
      color: red;
      margin: 0 0 10px;
    }

    .title h2 {
      font-size: 16pt;
      color: #000;
      margin: 0 0 10px;
    }

    .title p {
      font-size: 14pt;
      color: #000;
      margin: 10px 0 0;
    }

    .main-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11pt;
      margin-top: 20px;
      border-top: 1px solid red;
      border-left: 1px solid red;
      border-right: 1px solid black;
      border-bottom: 1px solid black;
    }

    .main-table th,
    .main-table td {
      border-right: 1px solid black;
      border-bottom: 1px solid black;
      padding: 10px;
      vertical-align: top;
      text-align: left;
    }

    .main-table th {
      background-color: #ffecec;
    }

    .sign-line {
      text-align: right;
    }

    .section-title {
      font-weight: bold;
      font-size: 14pt;
      margin-top: 40px;
      text-align: center;
    }

    .page-break {
      page-break-after: always;
    }

    a {
      color: black;
      text-decoration: underline;
    }
  </style>
</head>
